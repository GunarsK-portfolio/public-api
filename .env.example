# Database
# For local development: localhost
# For Docker: postgres
# Public API uses READ-ONLY user for extra security
DB_HOST=localhost
DB_PORT=5432
DB_USER=portfolio_public
DB_PASSWORD=portfolio_public_dev_pass
DB_NAME=portfolio

# S3/MinIO
# For local development: http://localhost:9000
# For Docker: http://minio:9000
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=images
S3_USE_SSL=false

# Server
PORT=8082
